<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean for DoctorRepository -->
    <bean id="doctorRepository" class="healthcare.DoctorRepository" />

    <!-- Bean for AppointmentService with dependency injection -->
    <bean id="appointmentService" class="healthcare.AppointmentService">
        <property name="doctorRepository" ref="doctorRepository"/>
    </bean>

</beans>
